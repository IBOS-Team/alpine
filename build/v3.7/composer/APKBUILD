# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=1.6.1
# Package release number is started at 100 so it overwrites the official package
pkgrel=100
pkgname=composer
pkgdesc="Dependency manager for PHP"
url="https://getcomposer.org/"
arch="noarch"
license="MIT"
depends=""
makedepends=""
source="$pkgname-$pkgver.phar::https://getcomposer.org/download/$pkgver/$pkgname.phar"
options="!check"

package() {
  install -m 0755 -D "$srcdir"/$pkgname-$pkgver.phar "$pkgdir"/usr/bin/$pkgname
}
sha512sums="206f269a4603ab73282a2ca98f723b13f6fb45aaf2423be0f0bb399a1bd8dcb2b0517d40942164397e69a11fb682f4d008b8c572ee13d887451fe1472fa70bae  composer-1.6.1.phar"
