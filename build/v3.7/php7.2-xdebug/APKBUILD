# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=2.6.0
# Package release number is started at 100 so it overwrites the official package
pkgrel=100
_pkgrealver=2.6.0alpha1
_phpver=7.2
_php=php$_phpver
_pkgreal=xdebug
pkgname=$_php-$_pkgreal
pkgdesc="PHP $_phpver xDebug Profiler"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="The Xdebug license"
depends="$_php-common"
makedepends="$_php-dev coreutils"
source="https://pecl.php.net/get/$_pkgreal-$_pkgrealver.tgz"
builddir="$srcdir/$_pkgreal-$_pkgrealver"
provides="php-$_pkgreal=$pkgver-r$pkgrel php7-$_pkgreal=$pkgver-r$pkgrel"
replaces="php-$_pkgreal php7-$_pkgreal"

prepare() {
  default_prepare
}

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules \
  CFLAGS="-fstack-protector-strong -fpic -fpie -O2" \
  CPPFLAGS="$CFLAGS" \
  LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie" \
  ./configure \
    --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$jobs
}

check() {
  cd "$builddir"

  local allow_fail='no'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "zend_extension=$_pkgreal" > "$pkgdir"/etc/php/$_phpver/conf.d/$_pkgreal.ini
}
sha512sums="ffd3b5ca78c6b42773ad43cedbe18ccd6d4ed34b709cbd821d4496d384e2bf9a90bb23c53011d490047f28d198b08b225c2b445a8dfe420769587065098f2e89  xdebug-2.6.0alpha1.tgz"
