# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=2.0.10
# Package release number is started at 100 so it overwrites possible official package
pkgrel=100
_phpver=7.2
_php=php$_phpver
_pkgreal=swoole2
pkgname=$_php-$_pkgreal
pkgdesc="PHP $_phpver extension - Event-driven asynchronous and concurrent networking engine with high performance"
url="http://pecl.php.net/package/swoole"
arch="all"
license="Apache2.0"
depends="$_php-common"
makedepends="$_php-dev coreutils linux-headers"
source="https://github.com/swoole/swoole-src/archive/v2.0.10-rc3.zip"
builddir="$srcdir/swoole-src-$pkgver-rc3"
provides="php-$_pkgreal=$pkgver-r$pkgrel php7-$_pkgreal=$pkgver-r$pkgrel"
replaces="php-$_pkgreal php7-$_pkgreal"
options="!check"

prepare() {
  default_prepare
}

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules \
  CFLAGS="-fstack-protector-strong -fpic -fpie -O2" \
  CPPFLAGS="$CFLAGS" \
  LDFLAGS="-Wl,-O1 -Wl,--hash-style=both -pie" \
  ./configure \
    --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$jobs
}

check() {
  cd "$builddir"

  local allow_fail='yes'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=swoole" > "$pkgdir"/etc/php/$_phpver/conf.d/swoole.ini
}
sha512sums="739fa0b6db53d7e6cfa1b0cb67f2297a9c9faf7d3e648101548d82366a60a431b3c0bb12eb57342f96b4c2b385840890269ecb19ed58574fd99b275f6df916ff  v2.0.10-rc3.zip"
