# Maintainer: Peter Kokot <peterkokot@gmail.com>

pkgver=1.3.1
pkgrel=0
_phpver=7.0
_php=php$_phpver
_pkgreal=mongodb
pkgname=$_php-$_pkgreal
pkgdesc="PHP $_phpver MongoDB extension"
url="http://pecl.php.net/package/$_pkgreal"
arch="all"
license="Apache"
depends="$_php-common $_php-json"
makedepends="$_php-dev coreutils openssl-dev pcre-dev bash"
source="http://pecl.php.net/get/$_pkgreal-$pkgver.tgz"
builddir="$srcdir/$_pkgreal-$pkgver"

prepare() {
  default_prepare
}

build() {
  local jobs=$(($(nproc)+1))

  cd "$builddir"

  phpize

  EXTENSION_DIR=/usr/lib/php/$_phpver/modules ./configure \
    --prefix=/usr \
    --with-php-config=/usr/bin/php-config

  make -j$jobs
}

check() {
  cd "$builddir"

  local allow_fail='yes'

  NO_INTERACTION=1 REPORT_EXIT_STATUS=1 \
    SKIP_SLOW_TESTS=1 SKIP_ONLINE_TESTS=1 TEST_TIMEOUT=10 \
    TZ= LANG= LC_ALL= \
    make test || [ "$allow_fail" = yes ]
}

package() {
  mkdir -p "$pkgdir"
  install -d $pkgdir/
  make -C "$builddir" INSTALL_ROOT="$pkgdir" install
  install -d "$pkgdir"/etc/php/$_phpver/conf.d
  echo "extension=$_pkgreal.so" > "$pkgdir"/etc/php/$_phpver/conf.d/00_$_pkgreal.ini
}
sha512sums="27ef35e94be8c76d07e8f7e566d5bb08820aa65dfcffc7763b124ff4c1dfb2f9daacf63d53f979fac90504b1351d57a31cc286df29eaef06deae6c6c482a0181  mongodb-1.3.1.tgz"
